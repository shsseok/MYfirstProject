<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bory2"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/backgracolor">


        <TextView
            android:id="@+id/text1"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/base_shape"
            android:backgroundTint="@color/yellow7"
            android:fontFamily="@font/font_amsterdam"
            android:gravity="center"
            android:text="시세시세"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/logininfo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center|bottom"
            android:text="로그인 후 더 많은 서비스를 이용해 보세요."
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1"/>


        <EditText
            android:id="@+id/id"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="left|center"
            android:hint="    아이디"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logininfo"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="left|center"
            android:hint="    패스워드"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id"
            android:textColor="@color/black"
            android:password="true" />


        <Button
            android:id="@+id/loginbutton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_color_yellow"
            android:backgroundTint="@color/yellow4"
            android:fontFamily="@font/font_amsterdam"
            android:padding="5dp"
            android:text="로 그 인"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/password"
            app:layout_constraintTop_toBottomOf="@id/password" />


        <Button
            android:id="@+id/findid"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_amsterdam"
            android:padding="5dp"
            android:text="아이디 찾기"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/findpass"
            app:layout_constraintTop_toBottomOf="@id/loginbutton" />

        <Button
            android:id="@+id/findpass"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_amsterdam"
            android:padding="5dp"
            android:text="비밀번호 찾기"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/findid"
            app:layout_constraintRight_toLeftOf="@id/joinbutton"
            app:layout_constraintTop_toBottomOf="@id/loginbutton" />

        <Button
            android:layout_marginRight="50dp"
            android:id="@+id/joinbutton"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_amsterdam"
            android:padding="5dp"
            android:text="회원가입"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/findpass"
            app:layout_constraintTop_toBottomOf="@id/loginbutton"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>